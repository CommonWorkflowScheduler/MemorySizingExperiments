params {
    input     = '/input/input/landsat'
    dem       = '/input/input/dem'
    wvdb      = '/input/input/wvdb'
    data_cube = '/input/input/datacube-definition.prj'
    aoi       = '/input/input/aoi.gpkg'
    endmember = '/input/input/hostert-2003.txt'

    start_date = '1984-01-01'
    end_date   = '2006-12-31'

    sensors_level1 = 'LT04,LT05'
    sensors_level2 = 'LND04 LND05'

    outdir = '/input/data/output'
    group_size = 100
}

process {
    withName: "FORCE_PYRAMID" {
        memory      = { 5000.MB * task.attempt }
        time        = { 6.hour * task.attempt }
    }
}